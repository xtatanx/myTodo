.app-feature
    &_icon
        font-size unit(60/18, em)
        color mainRed
    &_title
        text-transform uppercase

    &_text
        margin 0
        text-align left   

.main-banner
    width 100%
    height 350px
    background url("../img/desktop2.jpg") no-repeat center center fixed
    background-size cover
    &_wrapper
        width 90%
        margin 0 auto  
    &_copy
        color lightColor
        text-transform uppercase
        font-family titleFont
        text-shadow 1px 1px 1px rgba(darkColor, .7)
        font-size unit(50/18, em)  
        font-weight normal