.atask-wrapper
  padding-top 54px
  margin-bottom 16px
  padding-bottom 32px
  border-bottom 1px solid lighten(darkColor, 50%)

.the-task
  margin 0
  background darken(whiteColor, 2%)
  color lighten(darkColor, 50%)
  border none
  font-size 1em 
  width 50%
  padding 6px 20px
  border-radius 8px
  border 2px solid darken(whiteColor, 10%)
  transition border-color .1s ease
  margin-bottom 32px
  &::placeholder
    color @color
    transition color .2s ease
  &:focus
    color darkColor
    outline none
    border-color mainBlue
    &::placeholder
      color @color

.add-task
  margin-left 16px
  margin-bottom 32px

.filter_btn
  margin 0 4px

.todos
  margin 0 auto
  width 100%
  max-width 960px
  padding 16px 20px

.todos-list
  margin 0
  padding 0
  list-style none
  text-align left

.task-wrapper
  padding 6px
  border-bottom 1px solid lighten(darkColor, 70%)
  &:hover
    background darken(whiteColor, 5%)
    .close_btn
      display inline-block
  &__not-visible
    display none      
  &.not-done
    .checkbox
      text-indent -9999px
    .task_title
      text-decoration none
      color darkColor  


.checkbox
  overflow hidden
  size 20px
  border 1px solid lighten(darkColor, 70%)
  border-radius 4px
  cursor pointer
  font-size unit(14/18, em)
  display inline-block
  vertical-align middle
  text-align center
  padding-top 2px
  &:hover
    border-color lighten(darkColor, 30%)

.task_title
  font-size unit(15/18, em)
  color darken(whiteColor, 70%)
  text-decoration line-through
  &.display__none
    display none

.editBox
  display none
  margin 0 5px
  &.edit_box__editing
    display inline   

.close_btn
  color mainRed
  cursor pointer
  display none
  vertical-align middle
  margin-top -3px
  margin-left 4px
  &:hover
    color darken(@color, 26%) 
